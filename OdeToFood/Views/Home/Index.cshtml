    @* ==With an Ajax using==
            @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "restaurantList" }))
        {
           <input type="search" name="searchTerm" />
